@model ProductCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <span class="text-danger">@ViewBag.Message</span>
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Product</h4>
                    <form asp-controller="Product" asp-action="Create" enctype="multipart/form-data" class="forms-sample" method="post">
                        <div class="form-group">
                            <label asp-for="Title">Title</label>
                            <input class="form-control" asp-for="Title">
                            <span class="text-danger" asp-validation-for="Title"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Desc">Desc</label>
                            <input class="form-control" asp-for="Desc">
                            <span class="text-danger" asp-validation-for="Desc"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price">Price</label>
                            <input type="number" min="0" step=".01" class="form-control" asp-for="Price">
                            <span class="text-danger" asp-validation-for="Price"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryId">Categories</label>
                            <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.categories"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Photos">Photos</label>
                            <input class="form-control" asp-for="Photos">
                            <span class="text-danger" asp-validation-for="Photos"></span>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-light">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
}

