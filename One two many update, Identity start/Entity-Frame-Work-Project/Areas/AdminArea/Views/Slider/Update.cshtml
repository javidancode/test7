@model Slider

@{
    ViewData["Title"] = "Update";
}

<div class="container-fluid  mx-5 my-3">
    <h3>Update slider</h3>
    <div class="img-area my-3">
        <img src="~/img/@Model.Image" style="width:150px;height:150px;" alt="Alternate Text" />
    </div>
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <input class="form-control" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <a class="btn btn-primary" asp-controller="Slider" asp-action="Index">Back</a>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>

</div>

