@model IEnumerable<Slider>


@{
    ViewData["Title"] = "Index";
    int count = 1;
}


    <div class="table-responsive pt-3 ">
        <div class="create-btn my-5">
            <a asp-area="AdminArea" asp-controller="Slider" asp-action="Create" class="btn btn-success">Create</a>
        </div>
        <table class="table table-bordered">

            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var slider in Model)
                {
                    <tr>
                        <td>
                            @count
                        </td>
                        <td>
                            <img src="~/img/@slider.Image" alt="slider" />
                        </td>
                        <td>
                            <button type="button" class="btn btn-info"><i class="mdi mdi-information mx-0"></i></button>
                            <a asp-action="Update" asp-route-id="@slider.Id" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></a>
                            <form style="display: inline-block" asp-action="Delete" asp-route-id="@slider.Id" method="post">
                                <button class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></button>
                            </form>
                        </td>
                    </tr>

                    count++;
                }


            </tbody>
        </table>
    </div>

